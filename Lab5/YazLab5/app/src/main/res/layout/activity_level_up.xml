<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="@color/colorText"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="TEBRİKLER!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/successLogo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/congratulation"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/btn"
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/timeText"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            android:text="GEÇEN SÜRE: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/letterCountText"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            android:text="KULLANILAN HARF: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:text="PUAN: "
            android:drawableEnd="@drawable/gold"
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/highScoreText"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="EN YÜKSEK PUAN: "
        android:drawableEnd="@drawable/gold"
        android:drawablePadding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/nextLevelBtn"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorText"
        android:fontFamily="@font/montserrat_bold"
        android:text="SONRAKİ BÖLÜM"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="@drawable/btn"
        android:layout_width="240dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/replayBtn"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/montserrat_bold"
            android:text="TEKRARLA"
            android:textSize="20sp"
            android:background="@drawable/btn"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/homeBtn"
            android:textColor="@color/colorText"
            android:fontFamily="@font/montserrat_bold"
            android:text="ANASAYFA"
            android:textSize="20sp"
            android:background="@drawable/btn"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>