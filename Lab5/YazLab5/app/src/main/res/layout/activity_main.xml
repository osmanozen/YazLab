<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/kouLogo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/kou"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <TextView
        android:id="@+id/kouText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="KOÜ YAZLAB 5"
        android:textColor="#FFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/montserrat_bold"
        android:text="BAŞLA"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="25sp" />

    <Button
        android:id="@+id/levelBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/montserrat_bold"
        android:text="BÖLÜMLER"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="25sp" />

    <Button
        android:id="@+id/scoreboardBtn"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/montserrat_bold"
        android:text="SKOR TABLOSU"
        android:drawableStart="@drawable/gold"
        android:paddingStart="10dp"
        android:textColor="@color/colorText"
        android:textSize="25sp"
        tools:ignore="RtlSymmetry" />

</LinearLayout>